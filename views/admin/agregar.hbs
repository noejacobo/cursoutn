<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Agregar una nueva novedad</h3>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data" id="formagregarnov">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>
                        <p>
                        Imagen </p>
                    <p><input type="file" name="imagen" id="imagen" /></p></label>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="botonagregarnov">
                    Guardar
                </button>
            
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>