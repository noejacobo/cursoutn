<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Agregar un nuevo producto</h3>
            <form action="/admin/productos/prodagregar" method="post" enctype="multipart/form-data" id="formagregarprod">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Varietal" name="varietal"></textarea>
                </div>
                <div class="form-group">
                    <label>
                        <p>
                        Imagen </p>
                    <p><input type="file" name="imagen" id="imagenprod" /></p></label>
                </div>
                
                <button type="submit" class="btn btn-primary" id="botonagregarprod">
                    Guardar
                </button>
            
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>