<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Modificar la novedad</h3>
            <form action="/admin/novedades/modificar" method="post" id="formmodificarnov" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                    <label>Imagen </label></p>
                    <p><input type="file" name="imagen" id="imagen"/></label></p>
                    <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="botonguardarnov">
                    Guardar
                </button>
            
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>